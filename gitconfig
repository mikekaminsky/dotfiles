[alias]
  # A better git stash
  wip = !"git add -A; git ls-files --deleted -z | xargs -0 git rm; git commit -m 'wip'"
  unwip = !git log -n 2 | grep -q -c wip && git reset HEAD~1
  reb = !git rebase -i $(git merge-base HEAD master)
